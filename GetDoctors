
Функция GetDoctorМетод1(Запрос)
	Ответ = Новый HTTPСервисОтвет(200);
	
	ИмяМетода = Запрос.ПараметрыURL.Получить("ИмяМетода");
	
	Если ЗначениеЗаполнено(ИмяМетода) Тогда 
		
		Запрос = Новый Запрос;
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	Doctor.Фио КАК Фио,
		|	Doctor.Код КАК Код,
		|	Doctor.Наименование КАК Наименование,
		|	&ИмяМетода КАК Гуид
		|ИЗ
		|	Справочник.Doctor КАК Doctor
		|ГДЕ
		|	Doctor.Ссылка = &Ссылка";
		
		Запрос.УстановитьПараметр("Ссылка",Справочники.Doctor.ПолучитьСсылку(Новый УникальныйИдентификатор(ИмяМетода)));
		Запрос.УстановитьПараметр("ИмяМетода",ИмяМетода);
		
		РезультатЗапроса = Запрос.Выполнить();
		ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
		
		ЗаписьJSON = Новый ЗаписьJSON;
		ЗаписьJSON.УстановитьСтроку();
		
		СтруктураТест = новый Структура("Фио,Наименование,Гуид");
		
		Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
			ЗаполнитьЗначенияСвойств(СтруктураТест,ВыборкаДетальныеЗаписи);
			ЗаписатьJSON(ЗаписьJSON, СтруктураТест);
		КонецЦикла;
		
		СтрJSON = ЗаписьJSON.Закрыть();
		
		
		
		Иначе
		
			СтрJSON="";
			
		КонецЕсли;
	
		Ответ.УстановитьТелоИзСтроки(СтрJSON,КодировкаТекста.UTF8);	
		
		Возврат Ответ;
		
	КонецФункции
	
